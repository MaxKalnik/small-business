.btn-container--show-full
  display: flex
  position: relative
  justify-content: center
  margin-top: 24px
  &:before
    height: 60px
    width: 100%
    position: absolute
    top: -60px
    display: block
    background-image: linear-gradient(-180deg,rgba(255,255,255,.4) 0,#fff 100%);
    content: ''

.btn-go-back
  display: inline-block
  position: relative
  color: #E9327F
  border-radius: 5px
  padding: 12px 24px
  font-size: 12px
  line-height: 26px
  font-weight: 600
  text-transform: uppercase
  cursor: pointer
  transition: .25s ease-out
  border: 1px solid alpha(#E83180, 0.4)
  background: $color-white
  #btn_icon
    fill: #E83180
    transition: .25s ease-out
  &:hover
    background: #E83180
    color: $color-white
    border-color: $color-white
    #btn_icon
      fill: $color-white

.btn-go-back-text
  border-bottom: 1px solid alpha(#E83180, 0.4)

.mobile-only
  display: none

+respond-to($xsmall)
  .ranking-table.ranking-table--fixed
    th
      width: 100%
      background-image: linear-gradient(90deg, #642B8C 0%, #642B8C 100%)
    tbody
      tr
        &:nth-child(even)
          background-image: linear-gradient(90deg, alpha(#F0EAF4, 50%) 0%, alpha(#F0EAF4, 50%) 100%)

  .section--table
    .breadcrumbs__wrap
      white-space: nowrap
      max-width: 100%
      box-sizing border-box

  .section--table
    margin-bottom: 30px
    .breadcrumbs__wrap
      margin-bottom: 30px

    .btn-container
      margin-top: 24px

  .ranking-table__container
    display: flex
    flex-direction: row

  .mobile-only
    width: 170px
    display: flex
    flex-direction: column
    padding-left: 1px
    background-image: linear-gradient(90deg, alpha(#F0EAF4, 70%) 0%, alpha(#FDEAF3, 70%) 50%, alpha(#FFF0EC, 70%) 100%)
    border-radius: 5px 0 0 5px
    overflow: hidden
    box-shadow: 2px 0 13px 0 rgba(0,0,0,.16)
    position: relative

  .ranking-table
    thead
      th
        height: 56px
        padding: 0 8px

    tbody
      td
        padding: 0 8px

  .ranking-table.ranking-table--data
    min-width: 610px

  .ranking-table.ranking-table--fixed
    width: 170px
    position: relative
    border-radius: 5px 0 0 0
    border-right: none
    box-shadow: 2px 0 13px 0 rgba(0,0,0,0.16)

    th
      vertical-align: middle

    th:last-child
      position: relative
      &:after
        content: ''
        position: absolute
        width: 1px
        height: 60px
        background: rgba(255, 255, 255, 0.3)
        right: 0
        top: 0

    td
      &:first-child
        width: 2%

  .ranking-table__wrapper
    width: calc(100% - 170px)
    border-radius: 0 5px 5px 0
    overflow-x: scroll
    padding-left: 0
    padding-right: 0
    background-image: linear-gradient(90deg, alpha(#F0EAF4, 70%) 0%, alpha(#FDEAF3, 70%) 50%, alpha(#FFF0EC, 70%) 100%)

  .ranking-table--data
    border-radius: 0 5px 5px 5px
    border-left: none
    thead
      th
        &:first-child
          display: none

    tbody
      td
        &:first-child
          display: none

+respond-to($xsmall)
  .ranking-table.ranking-table--data
    min-width: 610px

  .mobile-only
    width: 147px

  .ranking-table.ranking-table--fixed
    width: 147px

  .ranking-table__wrapper
    width: calc(100% - 147px)
